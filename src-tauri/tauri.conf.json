{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Rimelight",
  "version": "1.0.0",
  "identifier": "com.rimelight.tapp",
  "build": {
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun build:tauri",
    "devUrl": "http://127.0.0.1:3000",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "Rimelight",
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "versionCode": 1000000
    }
  }
}